<% provide(:page_title, @post.title) %>
<% provide(:user, 'active') %>

<div>
	<%= link_to 'Edit', edit_users_post_path(@post), class: 'btn btn-sm btn-info' %>
	<%= link_to 'Remove', users_post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
	<% if @post.published? %>
		<td><%= link_to 'Unpublish', unpublish_users_post_path(@post), method: :put, class: 'btn btn-sm btn-secondary' %></td>
	<% else %>
		<td><%= link_to 'Publish', publish_users_post_path(@post), method: :put, class: 'btn btn-sm btn-success' %></td>
	<% end %>
</div>

<div class="row">
	<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-justify">
		<h1 class="text-center"><%= @post.title %></h1>
		<p class="text-center"><%= @post.display_day_published %></p>
		<%= @post.body.html_safe %>
	</div>
</div>