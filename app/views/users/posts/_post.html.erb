<tr>
	<td><%= link_to post.title, users_post_path(post) %></td>
	<td></td>
	<% if post.published? %>
		<td><%= link_to 'Unpublish', unpublish_users_post_path(post), method: :put, class: 'btn btn-sm btn-secondary' %></td>
	<% else %>
		<td><%= link_to 'Publish', publish_users_post_path(post), method: :put, class: 'btn btn-sm btn-success' %></td>
	<% end %>
	<td><%= link_to 'Edit', edit_users_post_path(post), class: 'btn btn-sm btn-info' %></td>
	<td><%= link_to 'Remove', users_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>