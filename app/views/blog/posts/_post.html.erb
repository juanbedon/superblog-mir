<div class="col-sm-6 col-lg-4">
	<div class="card">
	  <div class="card-topper" style="background-image: url(<%= post.banner_image_url %>);"></div>
	  <div class="card-body">
	    <h5 class="card-title"><%= link_to post.title, post %></h5>
	    <p class="published-date"><%= post.display_day_published %></p>
	    <p class="card-text"><%= truncate(post.body, length: 250) %></p>
	    <%= link_to 'Read', post, class: 'btn btn-read' %>
	  </div>
	</div>
</div>